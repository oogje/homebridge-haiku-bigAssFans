{
  "pluginAlias": "BigAssFans-Haiku",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Homebridge plugin for Big Ass Fans Haiku",
  "footerDisplay": "For a detailed description, see the [README](https://github.com/oogje/homebridge-haiku-bigassfans#platform-configuration-fields)",
  "schema": {
    "type": "object",
    "properties": {
      "fans": {
        "title": "Fans:",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
                "title": "Name",
                "description": "The name of the fan.",
                "type": "string",
                "minLength": 1,
                "required": true,
                "default": "haiku fan"
            },
            "ip": {
              "title": "Fan IP address",
              "description": "The IP address of the fan.",
              "type": "string",
              "format": "ipv4",
              "required": true
            },
            "mac": {
              "title": "MAC address",
              "description": "The MAC address of the fan.",
              "type": "string",
              "required": true
            },
            "whoosh": {
              "title": "Whoosh Switch",
              "description": "Add a switch for 'Whoosh Mode'",
              "type": "boolean",
              "default": false
            },
            "dimToWarm": {
              "title": "Dim to Warm Switch",
              "description": "Add a switch for 'Dim to Warm'",
              "type": "boolean",
              "default": false
            },
            "fanAuto": {
              "title": "Fan Auto Switch",
              "description": "Add a switch for 'Fan Auto'",
              "type": "boolean",
              "default": false
            }
          }
        }  
      }
    }
  }
}
